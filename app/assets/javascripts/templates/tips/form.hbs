<header class='page-header' >
  {{#if id }}
    <h4>Editar dica</h4>
  {{else}}
    <h4>Nova dica</h4>
  {{/if}}
</header>
<form class="form-vertical" novalidate>
  <input name="id" type="hidden" />

  <fieldset>

    <div class="control-group content_group">
      <label class="control-label" for="content">Conteúdo</label>
      <div class="controls">
        {{#if id}}
          <textarea id='ckeditor-{{question_id}}-tip-{{id}}' name="content" required="required"></textarea>
        {{else}}
          <textarea id='ckeditor-{{question_id}}-tip-new' name="content" required="required"></textarea>
        {{/if}}
      </div>
    </div>

    <div class="control-group number_of_tries_group">
      <label class="control-label" for="number_of_tries">Mostrar após a tentativa sucesso</label>
      <div class="controls">
        <input id="number_of_tries" name="number_of_tries" type="text" required="required" />
      </div>
    </div>

    <div class="form-actions">
      <input type="submit" value="Salvar" class="btn btn-primary" />
      <input type="button" value="Cancelar" class="btn btn-primary btn-cancel" />
    </div>

  </fieldset>
</form>
