<div class="accordion" id="accordion-{{question_id}}">

  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-{{question_id}}"
        href="#collapse-answers-{{question_id}}">
        Minhas últimas respostas para esta questão. Total de <span class="amount"></span> respostas
        {{this.title}}
      </a>
    </div>
    <div id="collapse-answers-{{question_id}}" class="accordion-body collapse">
      <div class="accordion-inner">

        <table class='table table-bordered'>
          <thead>
            <tr>
              <th class="response">Resposta</th>
              <th class="correct">Correta</th>
              <th class="attempt_number">Tentativa</th>
              <th class="time">Data e Hora</th>
              <th class="comments_size" data-toggle="tooltip" data-placement="left"
                data-original-title="Quantidade de Comentários">C</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
